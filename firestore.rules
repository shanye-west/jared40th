rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read-only for the entire app
    match /{document=**} {
      allow read: if true;
    }

    // Writes: only allow authenticated users to update existing matches
    match /matches/{matchId} {
      allow update: if request.auth != null;
      allow create, delete: if false;
    }
  }
}